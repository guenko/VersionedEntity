<?xml version="1.0" encoding="UTF-8"?>

<!-- JBoss 6.1 specific definition of the MySQL datasource -->
<!-- copy from jboss-6.1.0.Final\docs\examples\jca\mysql-ds.xml -->
<datasources>
  <local-tx-datasource>
    <jndi-name>jdbc/sampledb</jndi-name>
    <connection-url>jdbc:mysql://localhost:3306/sampledb?serverTimezone=GMT&amp;useLegacyDatetimeCode=false
    </connection-url>
    <driver-class>com.mysql.jdbc.Driver</driver-class>
    <user-name>root</user-name>
    <password>root</password>
    <exception-sorter-class-name>org.jboss.resource.adapter.jdbc.vendor.MySQLExceptionSorter
    </exception-sorter-class-name>
    <valid-connection-checker-class-name>org.jboss.resource.adapter.jdbc.vendor.MySQLValidConnectionChecker
    </valid-connection-checker-class-name>
    <metadata>
      <type-mapping>mySQL</type-mapping>
    </metadata>
  </local-tx-datasource>
</datasources>